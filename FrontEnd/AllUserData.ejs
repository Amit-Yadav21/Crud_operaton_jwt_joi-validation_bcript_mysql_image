<!DOCTYPE html>
<html>

<head>
  <title>User Data</title>
  <style>
    table {
      width: 95%;
      margin: auto;
      border-collapse: collapse;
      cursor: pointer;
    }

    th,
    td {
      padding: 8px;
      /* text-align: left; */
      border-bottom: 2px solid #ddd;
    }
    tr th{
      border-top-left-radius: 25px;
      border-bottom-right-radius: 25px;
      background-color: aqua;
    }

    td {
      text-align: center;
      margin-left: 50px;
      /* border: 2px solid red; */

    }

    td img {
      width: 100px;
      height: 3rem;
    }
    tr:nth-child(even) {
      background-color: #dddddd;
    }
    tr:nth-child(odd){
      background-color:#FFF;
    }

    h1 {
      text-align: center;
    }

    .anc {
      width: 950px;
      height: auto;
      font-size: 25px;
      margin-top: 30px;
      margin-left: 30px;
    }

    a {
      border-top-right-radius: 25px;
      border-bottom-left-radius: 25px;
      width: 100px;
      height: auto;
      padding: 5px;
      /* padding-top: 10px; */
      margin-top: 10px;
      background-color: rgb(42, 225, 249);
      color: black;
      outline: none;
      text-decoration: none;
    }
    h1{
      width: 55%;
      background-color: rgb(42, 225, 249);
      border-radius: 50%;
      margin-left: 20rem;
    }
  </style>
</head>

<body>
  <div class="anc">
    <a href="http://localhost:4000/signup">Register</a>
    <a href="http://localhost:4000/loginPage">Login</a>
    <!-- <a href="http://localhost:4000/updatePage">Update Data</a> -->
    <a class="ancor" href="http://localhost:4000/alldata">All User Data</a>
    <a href="http://localhost:4000/loginUserData">login User Data</a>
    <!-- <a href="http://localhost:4000/logout">Log-Out</a> -->
    <!-- <a href="http://localhost:4000/deleteuser">Delete login User</a> -->
  </div>
  <h1>All User Data</h1>
  <table class="table">
    <tr>
      <th>Employee ID</th>
      <th>Name</th>
      <th>Email</th>
      <!-- <th>Password</th> -->
      <th>Address</th>
      <th>Phone_Number</th>
      <th>Image</th>
    </tr>

    <% Datas.forEach(item=> { %>
      <tr>
        <td>
          <%= item.Employee_ID %>
        </td>
        <td>
          <%= item.Name %>
        </td>
        <td>
          <%= item.Email %>
        </td>
        <!-- <td>
          <%= item.Password %>
        </td> -->
        <td>
          <%= item.Address %>
        </td>
        <td>
          <%= item.Phone_Number %>
        </td>
        <td>
          <!-- <a href="<%= item.Image %>">View</a> -->
          <img src="<%= item.Image %>" alt="login user Image">
        </td>
      </tr>
      <% }) %>
  </table>
</body>

</html>