<!DOCTYPE html>
<html>

<head>
  <title>Login</title>
  <!-- <link rel="stylesheet" href="./loginPage.css"> -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

  <style>
    body {
      display: flex;
      align-items: center;
      justify-content: center;
      background-color: rgb(254, 246, 246);
    }

    .mainbox {
      /* border: 1px solid red; */
      width: 30%;
      margin: auto;
      margin-top: 100px;
      text-align: center;
      border-top-right-radius: 25px;
      border-bottom-left-radius: 25px;
      box-shadow: 1px 1px 5px 5px rgba(0, 0, 0, 0.2);
      background-color: #f7f3f3;

    }

    form {
      /* border: 2px solid green; */
      width: 80%;
      margin: auto;
      margin-bottom: 20px;
    }

    input {
      box-sizing: border-box;
      width: 100%;
      font-size: 18px;
      padding: 7px;
      border-radius: 10px;
    }

    label {
      font-size: 25px;
    }

    .loginbtn {
      /* border: 2px solid green; */
      width: 100%;
      margin: auto;
      margin-top: 25px;
      display: flex;
      justify-content: space-between;

    }

    button,
    a {
      padding: 7px;
      /* border: 2px solid red; */
      width: 50%;
      font-size: 18px;
      border-radius: 10px;
      border: 2px solid grey;
      margin-bottom: 10px;
      background-color: rgb(213, 235, 237);
      color: black;
      outline: none;
      text-decoration: none;
    }

    .inputbox {
      /* border: 2px solid red; */
      margin-bottom: 15px;
    }

    .eye {
      position: absolute;
      cursor: pointer;
    }

    #hide1 {
      display: none;
    }

    .fa {
      margin-left: -30px;
      margin-top: 10px;
    }
    
  </style>
</head>

<body>
  <div class="mainbox">
    <h1>Login</h1>

    <% if (error) { %>
      <p>
        <%= error %>
      </p>
      <% } %>

        <form method="POST" action="/login">
          <div class="inputbox">
            <label for="email" class="lbl">Email:</label>
            <input type="email" id="gmail" name="Email" required>
          </div>
          <div class="inputbox">
            <label for="password" class="lbl">Password:</label>
            <input type="password" name="Password" id="myInput" required>
            <span class="eye" onclick="myFunction()">
              <i id="hide1" class="fa fa-eye"></i>
              <i id="hide2" class="fa fa-eye-slash"></i>
            </span>
          </div>
          <div class="loginbtn">
            <button type="submit" class="btn">Login</button>
            <a href="http://localhost:4000/signup">Register</a>
          </div>

        </form>
  </div>
  <script>
    function myFunction() {
      var x = document.getElementById("myInput");
      var y = document.getElementById("hide1");
      var z = document.getElementById("hide2");

      if (x.type === "password") {
        x.type = "text";
        y.style.display = "block";
        z.style.display = "none";
      }
      else {
        x.type = "password";
        y.style.display = "none"
        z.style.display = "block";
      }
    }
  </script>

</body>

</html>